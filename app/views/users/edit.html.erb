<% provide(:title, "Edit user") %>
<h1>ユーザの編集</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @user) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email, 'Eメールアドレス' %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password_before, '登録しているパスワード' %>
        <%= f.password_field :password_before, class: 'form-control' %>

        <%= f.label :password, '変更後のパスワード' %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, '変更したパスワードの確認' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.submit "変更を保存する", class: "btn btn-primary" %>
    <% end %>
    </div>
</div>
