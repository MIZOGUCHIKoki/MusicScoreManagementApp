<body>
  <div class="left">
    <h2>楽譜詳細</h2>
  </div>
    
  <div class="center">
    <div class="left">
      <h3>曲名：<%= @score.name %></h3>
      <small>作成日：<%= @score.created_at %></small>
    </div>

    <table>
      <tr>
        <th>作曲者</th><th>編曲者</th><th>グレード</th><th>演奏時間</th>
      </tr>
      <tr>
        <td><%= @score.composer %></td>
        <td><%= @score.arranger %></td>
        <td><%= @score.grade %></td>
        <td><%= @score.time %></td>
      </tr>
    </table>

    <div>
      <h3>使用楽器一覧</h3>
      <table>
	      <tr>
		      <th>楽器名</th><th>パート数</th>
	      </tr>
		    <% if @score.piccolo > 0 %><tr><td>piccolo</td><td><%= @score.piccolo %></td></tr><% end %>
        <% if @score.c_flute > 0 %><tr><td>c_flute</td><td><%= @score.c_flute %></td></tr><% end %>
        <% if @score.oboe > 0 %><tr><td>oboe</td><td><%= @score.oboe %></td></tr><% end %>
        <% if @score.english_horn > 0 %><tr><td>english_horn</td><td><%= @score.english_horn %></td></tr><% end %>
        <% if @score.b_clarinet > 0 %><tr><td>b_clarinet</td><td><%= @score.b_clarinet %></td></tr><% end %>
        <% if @score.e_clarinet > 0 %><tr><td>e_clarinet</td><td><%= @score.e_clarinet %></td></tr><% end %>
        <% if @score.b_bass_clarinet > 0 %><tr><td>b_bass_clarinet</td><td><%= @score.b_bass_clarinet %></td></tr><% end %>
        <% if @score.bassoon > 0 %><tr><td>bassoon</td><td><%= @score.bassoon %></td></tr><% end %>
        <% if @score.e_alto_saxophone > 0 %><tr><td>e_alto_saxophone</td><td><%= @score.e_alto_saxophone %></td></tr><% end %>
        <% if @score.b_tenor_saxophone > 0 %><tr><td>b_tenor_saxophone</td><td><%= @score.b_tenor_saxophone %></td></tr><% end %>
        <% if @score.b_baritone_saxophone > 0 %><tr><td>b_baritone_saxophone</td><td><%= @score.b_baritone_saxophone %></td></tr><% end %>
        <% if @score.b_trumpet > 0 %><tr><td>b_trumpet</td><td><%= @score.b_trumpet %></td></tr><% end %>
        <% if @score.f_horn > 0 %><tr><td>f_horn</td><td><%= @score.f_horn %></td></tr><% end %>
        <% if @score.trombone > 0 %><tr><td>trombone</td><td><%= @score.trombone %></td></tr><% end %>
        <% if @score.euphonium > 0 %><tr><td>euphonium</td><td><%= @score.euphonium %></td></tr><% end %>
        <% if @score.tuba > 0 %><tr><td>tuba</td><td><%= @score.tuba %></td></tr><% end %>
        <% if @score.string_bass > 0 %><tr><td>string_bass</td><td><%= @score.string_bass %></td></tr><% end %>
        <% if @score.eb > 0 %><tr><td>eb</td><td><%= @score.eb %></td></tr><% end %>
        <% if @score.piano > 0 %><tr><td>piano</td><td><%= @score.piano %></td></tr><% end %>
        <% if @score.harp > 0 %><tr><td>harp</td><td><%= @score.harp %></td></tr><% end %>
        <% if @score.timpani > 0 %><tr><td>timpani</td><td><%= @score.timpani %></td></tr><% end %>
        <% if @score.drums > 0 %><tr><td>drums</td><td><%= @score.drums %></td></tr><% end %>
        <% if @score.percussion > 0 %><tr><td>percussion</td><td><%= @score.percussion %></td></tr><% end %>
      </table>
    </div>

    <div>
      <% if !current_user.admin? %>
      <%= link_to "編集", edit_score_url(@score) %>
      <% end %>
      <%= link_to "削除", @score, data:{"turbo-method": :delete, turbo_confirm: "本当に削除しますか？"} %>
    </div>
    <div>
      <%= link_to "戻る", home_path %>
    </div>
  </div>
</body>