<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% if logged_in? %>
      <% if !current_user.is_admin? %>
        <%= link_to "楽譜管理サービス", current_user, id:"logo" %>
      <% else %>
        <%= link_to "楽譜管理サービス（管理者）", current_user, id:"logo" %>
      <% end %>
    <% else %>
      <%= link_to "楽譜管理サービス", login_path, id: "logo" %>
    <% end %>
    <nav>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu"
          class="nav navbar-nav navbar-right collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to "楽譜一覧", scores_path %></li>
          <% if current_user.is_admin? %>
            <li><%= link_to "ユーザ一覧", users_path %></li>
          <% end %>
        <% else %>
        <% end %>
        <li><%= link_to "ヘルプ", help_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              アカウント <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to "マイページ", current_user %></li>
              <li><%= link_to "アカウント設定", edit_user_path(current_user)%></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
